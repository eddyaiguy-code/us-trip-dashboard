# Shared passcode for the trip dashboard login gate
APP_PASSCODE=replace-with-shared-passcode

# Used to sign the httpOnly auth cookie
COOKIE_SECRET=replace-with-long-random-secret

# Prisma Postgres connection string (Vercel Postgres / Neon / Supabase etc.)
DATABASE_URL=postgresql://user:password@localhost:5432/trip_dashboard

# Optional: choose data adapter
# DATA_ADAPTER=prisma

# Optional: choose upload storage adapter
# STORAGE_ADAPTER=local

# Optional: for Vercel Blob adapter
# BLOB_READ_WRITE_TOKEN=vercel_blob_rw_token
